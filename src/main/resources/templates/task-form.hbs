{{#partial "content"}}

    {{#if editTask}}
        <h1>Edit this Post!</h1>
        <form action="/tasks/{{editTask.id}}" method="post">
            <label for="description">Edit this task's description</label>
            <input id="description" name="description" type="text" value="{{editTask.description}}"><br>
            <label for="categoryName">Edit this categories's name</label>
            <input id="categoryName" name="categoryName" type="text" value="{{editTask.category.name}}">

    {{else}}
    <h1>Add a new Task!</h1>

    <form action="/tasks" method="post">
        <label for="description">Edit this task's description</label>
        <input id="description" name="description" type="text"><br>
        <label for="categoryName">Edit this categories's name</label>
        <input id="categoryName" name="categoryName" type="text">

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
{{/partial}}

{{> layout.hbs}}